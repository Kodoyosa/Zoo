<div class="container">
<form class="form-signin" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="post" >

    <a href="{{ path('kodo_zoo_accueil') }}" class="navbar-right">Retour</a>
    <h2 class="form-signin-heading">S'inscrire</h2>

    <label for="email" class="sr-only">Email</label>
    {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Adresse e-mail'|trans } }) }}
    {{ form_errors(form.email) }}

    <label for="username" class="sr-only">Pseudo</label>
    {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'Pseudo'|trans } }) }}
    {{ form_errors(form.username) }}

    <label for="password" class="sr-only">Password</label>
    {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'|trans } }) }}
    {{ form_errors(form.plainPassword.first) }}

    {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'Confirmer votre mot de passe'|trans } }) }}
    {{ form_errors(form.plainPassword.second) }}

    {{  form_rest(form) }}
    <button type="submit" class="btn btn-lg btn-warning btn-block" value="{{ 'registration.submit'|trans }}">S'inscrire</button>

    <div class="checkbox">
        <a href="{{ path('fos_user_security_login') }}">Se connecter</a><br/>
        <a href="{{ path('fos_user_resetting_request') }}" >Mot de passe perdu ?</a>
    </div>
</form>
</div>